@model IEnumerable<MyStock.Models.Tables.Supplier>

@{
    ViewData["Title"] = "Index";
}

<h1>Suppliers</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-primary">Create New Supplier</a>
</p>
<table class="table" id="table-supplier">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
               <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: none;">Edit</a> |
               <a asp-action="Details" asp-route-id="@item.Id" class="text-info" style="text-decoration: none;">Details</a> |
               <a asp-action="Delete" asp-route-id="@item.Id" class="text-secondary" style="text-decoration: none;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
